<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--https://github.com/jackuhan/FlowlayoutTags-->
    <style name="MultiLineChooseLayoutTags">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tag_textColor">#49C120</item>
        <item name="tag_backgroundColor">#FFFFFF</item>
        <item name="tag_checkedTextColor">#FFFFFF</item>
        <item name="tag_checkedBackgroundColor">#49C120</item>
        <item name="tag_textSize">13sp</item>
        <item name="tag_horizontalSpacing">5dp</item>
        <item name="tag_verticalSpacing">5dp</item>
        <item name="tag_horizontalPadding">12dp</item>
        <item name="tag_verticalPadding">3dp</item>
        <item name="tag_radius">5dp</item>
        <item name="tag_checkedStrokeColor">#49C120</item>
        <item name="tag_strokeWidth">1px</item>
        <item name="tag_multiChooseable">true</item>
        <item name="tag_singleLine">true</item>
        <item name="tag_width">wrap_content</item>
        <item name="tag_height">wrap_content</item>
    </style>

    <style name="MultiLineChooseLayoutTags.Beauty_Red1" parent="MultiLineChooseLayoutTags">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="tag_textColor">#666666</item>
        <item name="tag_backgroundColor">#ffffff</item>
        <item name="tag_checkedTextColor">#ffffff</item>
        <item name="tag_checkedBackgroundColor">#7289ff</item>
        <item name="tag_radius">0dp</item>
        <item name="tag_strokeColor">#939393</item>
        <item name="tag_checkedStrokeColor">#939393</item>
        <item name="tag_strokeWidth">1px</item>
        <item name="tag_horizontalSpacing">10dp</item>
        <!--这里设置固定大小,padding为0-->
        <item name="tag_horizontalPadding">10dp</item>
        <item name="tag_verticalPadding">10dp</item>
        <!--单位dp-->
        <item name="tag_width">wrap_content</item>
        <item name="tag_height">wrap_content</item>
        <!--限制tag显示长度,规则查看Textview-->
        <item name="tag_maxEms">5</item>
        <!--单选-->
        <item name="tag_multiChooseable">false</item>
    </style>


</resources>
